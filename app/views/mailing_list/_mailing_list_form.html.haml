.mailing-list-form
  %h3.title.is-4= t('.title')
  .box
    - if current_user.subscribed_to_mailing_list?
      %p= raw t('.currently_subscribed')
      .mt-5
        = button_to t('.unsubscribe'), users_mailing_list_unsubscribe_path, remote: true, class: 'button is-danger', data: {disable_with: t('.please_wait')}
    - else
      %p= raw t('.currently_unsubscribed')
      .mt-5
        = button_to t('.subscribe'), users_mailing_list_subscribe_path, remote: true, class: 'button is-success', data: {disable_with: t('.please_wait')}
