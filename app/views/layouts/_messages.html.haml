- if flash[:notice] || flash[:alert]
  %section#messages{data: {controller: 'messages'}}
    - if flash[:notice]
      .has-background-info
        .container
          .notification.is-info.is-radiusless
            %button.delete{data: {action: 'messages#close'}}
            = flash[:notice]
    - if flash[:alert]
      .has-background-danger
        .container
          .notification.is-danger.is-radiusless
            %button.delete{data: {action: 'messages#close'}}
            = flash[:alert]
