%nav.navbar.is-primary{role: 'navigation', aria: {label: 'navigation'}, data: {controller: 'navbar'}}
  .navbar-brand
    = link_to root_path, class: 'navbar-item' do
      %b= t('product_name')
    %a.navbar-burger{role: 'button', aria: {label: 'menu', expanded: 'false'}, data: {target: 'navbar.burger', action: 'navbar#toggleMenu'}}
      - 3.times do
        %span{aria_hidden: true}
  .navbar-menu{data: {target: 'navbar.menu'}}
    .navbar-end
      - if user_signed_in?
        - if current_user.role_admin?
          = link_to t('.admin'), admin_root_path, class: 'navbar-item', data: {turbolinks: false}
        = link_to t('devise.registrations.edit.title'), edit_user_registration_path, class: 'navbar-item'
        = link_to t('devise.sessions.destroy.title'), destroy_user_session_path, class: 'navbar-item', method: :delete
      - else
        = link_to t('devise.sessions.new.title'), new_user_session_path, class: 'navbar-item'
        = link_to t('devise.registrations.new.title'), new_user_registration_path, class: 'navbar-item'
