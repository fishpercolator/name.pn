- if @user.likeness.attached?
  .card.profile-card.mt-6
    .card-header.profile-card__header
      .card-header-title= t('.what_i_look_like')
    .card-content
      .likeness.likeness--centered
        = link_to url_for(@user.likeness), data: {controller: 'lightbox'} do
          = image_tag @user.likeness.variant(resize_to_limit: [300, 300])
