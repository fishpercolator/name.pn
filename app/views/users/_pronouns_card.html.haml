.card.profile-card.mt-6
  .card-header.profile-card__header
    .card-header-title= t('.how_to_use_my_pronouns')
  .card-content
    .profile-card__hint= t('.pronoun_hint')
    - case user.pronounless_style&.to_sym
    - when :none, :unknown
      %p.is-size-5.mt-5= t(".pronounless_blurbs.#{user.pronounless_style}_html")
    - when :any
      %p.is-size-5.mt-5= t('.pronounless_blurbs.any_html')
    - pronoun_sets.each do |pronoun_set|
      = render 'pronoun_set', pronoun_set: pronoun_set, user: user