<%= {
  name: t("product_name"),
  short_name: t("product_name"),
  start_url: "/",
  theme_color: "#2e333d",
  background_color: "#f3f4f6",
  display: "browser",
  orientation: "portrait",
  icons: [128, 144, 152, 192, 512].map {|s| {
    src: "/logos/logo-#{s}.png",
    type: "image/png",
    sizes: "#{s}x#{s}"
  }}
}.to_json.html_safe %>
