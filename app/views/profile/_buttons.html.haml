%nav.level
  .level-left
  .level-right
    .level-item
      .field.is-grouped
        - if previous_step != step
          .control
            = link_to previous_wizard_path, class: 'button' do
              %span.icon
                %i.mdi.mdi-chevron-left
              %span= t('.previous')
        - if next_step == Wicked::FINISH_STEP
          .control
            = f.button :button, class: 'is-primary' do
              %span= t('.finish')
              %span.icon
                %i.mdi.mdi-last-page
        - else
          .control
            = f.button :button, class: 'is-link' do
              %span= t('.next')
              %span.icon
                %i.mdi.mdi-chevron-right
