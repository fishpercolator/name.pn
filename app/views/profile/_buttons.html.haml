%nav.level.is-mobile.mt-6
  .level-left
    - if previous_step != step
      .level-item
        .field
          .control
            = link_to previous_wizard_path, class: 'button' do
              %span.icon
                %i.mdi.mdi-chevron-left
              %span= t('.previous')
  .level-right
    .level-item
      .field
        - if next_step == Wicked::FINISH_STEP
          .control
          = f.button :button, value: 'finish', class: 'is-primary' do
            %span= t('.finish')
            %span.icon
              %i.mdi.mdi-page-last
        - else
          .control
            = f.button :button, class: 'is-link' do
              %span= t('.next')
              %span.icon
                %i.mdi.mdi-chevron-right
